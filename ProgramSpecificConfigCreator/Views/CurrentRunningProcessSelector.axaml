<UserControl
    Background="Transparent"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ProgramSpecificConfigCreator.Views.CurrentRunningProcessSelector"
    x:DataType="vms:CurrentRunningProcessSelectorViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tempType="clr-namespace:Win32Helpers;assembly=Win32Helpers"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vms="clr-namespace:ProgramSpecificConfigCreator.ViewModels;assembly=ProgramSpecificConfigCreator"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto, Auto, *">
        <Button
            Classes="Primary"
            Command="{Binding SelectFromFileCommand}"
            Grid.Row="0"
            Theme="{DynamicResource SolidButton}">
            从文件选择
        </Button>

        <TextBlock
            Classes="H3"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Theme="{StaticResource TitleTextBlock}">
            当前正在运行的程序：
        </TextBlock>
        <u:LoadingContainer Grid.Row="2" Name="LoadingContainerA">
            <ListBox
                ItemsSource="{Binding ForeProcessInfos}"
                MaxHeight="300"
                MinHeight="200"
                Name="CurrentProgramListBox"
                SelectedItem="{Binding SelectedFpInfo}">
                <ListBox.DataTemplates>
                    <DataTemplate x:DataType="tempType:ForeProgramInfo">
                        <Grid ColumnDefinitions="80,100,60,200" HorizontalAlignment="Stretch">
                            <TextBlock
                                Classes="H6"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Theme="{StaticResource TitleTextBlock}">
                                进程名：
                            </TextBlock>
                            <TextBlock
                                Classes="H7"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Text="{Binding ProcessName}"
                                Theme="{StaticResource TitleTextBlock}"
                                ToolTip.Tip="{Binding ProcessName}" />
                            <TextBlock
                                Classes="H6"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                Theme="{StaticResource TitleTextBlock}">
                                标题：
                            </TextBlock>
                            <TextBlock
                                Classes="H7"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                MaxWidth="200"
                                Text="{Binding Title}"
                                Theme="{StaticResource TitleTextBlock}"
                                ToolTip.Tip="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </u:LoadingContainer>
    </Grid>
</UserControl>