<u:UrsaWindow
    Height="1000"
    Icon="/Assets/avalonia-logo.ico"
    Title="各应用快捷键配置"
    Width="800"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ProgramSpecificConfigCreator.Views.ProgramSpecificConfigMainWindow"
    x:DataType="vm:ProgramSpecMainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProgramSpecificConfigCreator.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:ProgramSpecificConfigCreator.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Panel>
        <Grid
            HorizontalAlignment="Stretch"
            Margin="20"
            RowDefinitions="Auto,*"
            VerticalAlignment="Top">

            <Grid ColumnDefinitions="*, *, *, *, *" Grid.Row="0">
                <u:IconButton
                    Classes="Primary"
                    Command="{Binding ModifyDefaultConfigCommand}"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Icon="{StaticResource SemiIconBox}"
                    Margin="5,15,5,5"
                    Theme="{DynamicResource SolidIconButton}">
                    修改默认配置
                </u:IconButton>
                <u:IconButton
                    Classes="Primary"
                    Command="{Binding AddNewConfigCommand}"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Icon="{StaticResource SemiIconPlusCircle}"
                    Margin="5,15,5,5"
                    Theme="{DynamicResource SolidIconButton}">
                    新建程序配置
                </u:IconButton>
                <u:IconButton
                    Classes="Primary"
                    Command="{Binding OpenExistProgramSelectorCommand}"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Icon="{StaticResource SemiIconMenu}"
                    Margin="5,15,5,5"
                    Theme="{DynamicResource SolidIconButton}">
                    已知程序配置
                </u:IconButton>
                <u:IconButton
                    Classes="Primary"
                    Grid.Column="3"
                    HorizontalAlignment="Stretch"
                    Icon="{StaticResource SemiIconImport}"
                    Margin="5,15,5,5">
                    从文件导入配置
                </u:IconButton>
                <u:IconButton
                    Classes="Primary"
                    Command="{Binding OpenConfigFolderCommand}"
                    Grid.Column="4"
                    HorizontalAlignment="Stretch"
                    Icon="{StaticResource SemiIconFolderOpen}"
                    Margin="5,15,5,5">
                    打开配置文件夹
                </u:IconButton>
            </Grid>

            <u:LoadingContainer
                CornerRadius="5"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Name="LoadingContainer"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">
                <local:ProgramSpecificConfigView />
            </u:LoadingContainer>
        </Grid>

        <u:OverlayDialogHost HostId="{x:Static local:ProgramSpecificConfigMainWindow.LocalHost}" />
    </Panel>

</u:UrsaWindow>